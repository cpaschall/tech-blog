<div>
    <div>
        <h2>Posts</h2>
    </div>
    {{#each articles as |article|}}
    <div class="card post-card">
        <h2>{{title}}</h2>
        <p>Created by {{user.user_name}} on {{format_date date_created}}</p>
        <p>{{art_body}}</p>
        <p>
            <button class="btn btn-primary">Comment</button>
        </p>
    </div>
    {{/each}}
</div>
